<h1>EXAM 1 LIST OF STUDENTS</h1>


<table align="center" border="1">
    <tr>
        <th>Name</th>
        <th>Student ID</th>
        <th>Status</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>


<% @exams.each do |exam| %>
<tr>
    <td><%= exam.name %></td>
    <td><%= exam.student_number %></td>
    <td><%= link_to 'Student', exam_path(exam) %></td>
    <td><%= link_to 'Edit' , edit_exam_path(exam) %></td>
    <td><%= link_to 'Delete',
                            exam_path(exam),
                            method: :delete,
                            data: { confirm: 'Are you sure you want to delete this student?' } %></td>
</tr>
<% end %>
</table>
